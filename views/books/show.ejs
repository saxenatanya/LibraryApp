<h2><%= book.title %></h2>

<img src="<%= book.coverPathImage %>" alt="book cover" width="100" height="150">
<div>  Author: <%= book.author.name %></div>
<div>  Publish Date: <%= book.publishDate.toDateString() %></div>
<div>  Page Count: <%= book.pageCount %></div>
<div>  Book Description: <%= book.decription %></div>

<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm',{url: `books/${book.id}`}) %>
<a href="/author/<%= book.author.id %>/edit">View Author</a>